<Window x:Name="Main" 
    x:Class="Coding.AppWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Coding.AppWpf.Controls"
    Height="350" Width="525"
    Title="MainWindow" 
    >
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.DesktopColorKey}}"/>
    </Window.Background>

    <Grid x:Name="MainWindowGrid">
        <!--//TEST: CircularVolumes control -->
        <Controls:CircularVolumes
            x:Name="CircularVolumes"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Height="200" Width="200" Margin="0,0,0,0" 
            RxMaximumValue="30"
            RxMinimumValue="0"
            RxValue="5"
            TxMaximumValue="30"
            TxMinimumValue="0"
            TxValue="7"
            Opacity="1"
            />
    </Grid>

</Window>
